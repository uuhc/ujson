{
  "manifest_version": 3,
  "name": "uJson - JSON Formatter & Viewer",
  "version": "1.0.0",
  "description": "Auto-format JSON responses with syntax highlighting, collapsible tree view, dark mode & built-in editor",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "uJson - Open JSON Editor",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "viewer.js",
        "editor.html",
        "editor.js",
        "assets/*",
        "chunks/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}